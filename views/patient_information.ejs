                  </nav>
       </header>

<div class="container">
        <div class="row ">
                <h3>Personal Information</h3>
            </div>
            <br>
<div class="row">
        <div class="col-md-6 ">
                <label>First Name:</label>
            </div>
            <div class="col-md-6 text-primary">
                <p><%= app.name %></p>
            </div>
</div>
<div class="row">
        <div class="col-md-6">
                <label>Last Name:</label>
            </div>
            <div class="col-md-6 text-primary">
                <p><%= app.surname %></p>
            </div>
</div>
<div class="row">
        <div class="col-md-6">
                <label>Email:</label>
            </div>
            <div class="col-md-6 text-primary">
                <p><%= app.email %></p>
            </div>
</div>
<div class="row">
        <div class="col-md-6">
                <label>Phone Number:</label>
            </div>
            <div class="col-md-6 text-primary">
                <p><%= app.phone %></p>
            </div>
</div>
<div class="row">
        <div class="col-md-6">
                <label>Address:</label>
            </div>
            <div class="col-md-6 text-primary">
                <p><%= app.address %></p>
            </div>
</div>
<div class="row">
        <div class="col-md-6">
                <label>Date Of Birth:</label>
            </div>
            <div class="col-md-6 text-primary">
                <p><%= app.dateofbirth %></p>
            </div>
</div>
<hr>
<div class="row">
    <h3>Medical Information</h3>
</div>
<br>
<div class="row">
        <div class="col-md-6">
                <label>GP name:</label>
            </div>
            <div class="col-md-6 text-primary">
                <p><%= app.gpname %></p>
            </div>
</div>

<div class="row">
        <div class="col-md-6">
                <label>GP Phone number:</label>
            </div>
            <div class="col-md-6 text-primary">
                <p><%= app.gpphone %></p>
            </div>
</div>
<div class="row">
        <div class="col-md-6">
                <label>Medical Center:</label>
            </div>
            <div class="col-md-6 text-primary">
                <%if(app.medical_center===''){%>
                <p>Not given</p>
                    <%} else{%>
                <p><%= app.medical_center %></p>
                <%}%>
            </div>
</div>
<div class="row">
        <div class="col-md-6">
                <label>Medical Center Phone Number:</label>
            </div>
            <div class="col-md-6 text-primary">
                    <%if(app.medical_center===''){%>
                        <p>Not given</p>
                            <%} else{%>
                                <p><%= app.medical_center_phone %></p>
                        <%}%>
                
            </div>
</div>
<div class="row">
        <div class="col-md-6">
                <label>Hospital:</label>
            </div>
            <div class="col-md-6 text-primary">
                    <%if(app.medical_center===''){%>
                        <p>Not given</p>
                            <%} else{%>
                                <p><%= app.hospital %></p>
                        <%}%>
                
            </div>
</div>
<div class="row">
        <div class="col-md-6">
                <label>Hospital Phone Number:</label>
            </div>
            <div class="col-md-6 text-primary">
                    <%if(app.medical_center===''){%>
                        <p>Not given</p>
                            <%} else{%>
                                <p><%= app.hospital_phone%></p>
                        <%}%>
                
            </div>
</div>
<div class="row">
        <div class="col-md-6">
            <label>Complaint Type</label>
        </div>
        <div class="col-md-6 text-primary" >
                                                        
                <%if(app.complaint_nature==1){%>
                    <p>Hip Replacement</p>
                    <%} else if(app.complaint_nature==2){%>
                    <p>Cataracts</p>
                    <%} else if(app.complaint_nature==3){%>
                        <p>Knee Replacement</p>
                    <%} else{%>
                        <p>Others</p>

                    <%}%>
</div>
    </div>
    <div class="row">
            <div class="col-md-6">
                    <label>Message</label>
                </div>
                <div class="col-md-6 text-primary">
                        <%if(app.medical_center===''){%>
                            <p>Not given</p>
                                <%} else{%>
                                    <p><%= app.message%></p>
                            <%}%>
                    
                </div>
    </div>
    <!-- <div class="col-md-6" style="align-items: center" >
    <a class="btn btn-success" onclick="allow(this)" id="<%=app.email%>"> Accept</a>
    <a class="btn btn-warning">Reject</a>
    </div> -->
    <hr>
    <div class="row">
            <h3>Documents</h3>
        </div><br>
    <div class="row ">
            <% if(files && user_doc){ %>
                <% files.forEach(function(file) { %>
                    <%user_doc.forEach(function(uc){%>
                        <%if(uc.filename===file.filename){%>
                  <div class="mb-3 col-md-4 border " style="align-items:center">
                      <h5 style="text-decoration:underline;text-align: center"><%=uc.type_of_file%></h5>
                      
                    <% if(file.isImage) { %>
                        <a href="/image/<%= file.filename%>" >
                      <img src="/image/<%= file.filename%>" class="m-auto"  alt="<%=file.filename%>"></a>
                      <% } else { %>
                        <a href="/files/<%= file.filename%>"><%=file.filename%></a>
                          <% } %>
                            
                  </div>
                  <br>
                  <%}})})%>
                    <% } else { %>
                      <p>No files to show</p>
                      <% } %>
                 </div>
              <%if(user_doc && user_doc[0].document_status!="In Progress"){%>
                 <div class="col-md-6 ml-auto" style="align-items: center" >
                        <%if(user_doc[0].document_status==='Document Accepted'  ){%>
                        <a class="btn btn-lg btn-dark text-light"> Allow</a>
                            
                        <%}else{%>
                        <a class="btn btn-lg btn-success" onclick="allowdocument(this)" id="<%=app.email%>"> Allow</a>
<%}%>
                        <%if(user_doc[0].document_status==='Rejected'){%>
                            <a class="btn btn-dark btn-lg text-light" >Reject</a>
<%}else{%>                        
                        <a class="btn btn-warning btn-lg" onclick="rejectdocument(this)" id="<%=app.email%>">Reject</a>
          <%}%>
                    </div>
                <%}%>    
</div>
<br><br>

</body>
</html>