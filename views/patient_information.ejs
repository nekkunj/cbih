 <script >
        
        function allowdocument(abc){
          var em=$(abc).attr('id')
          $.post('/allow/document',{
            Email:em
          })
        }
        function rejectdocument(abc){
            var em=$(abc).attr('id')
          $.post('/reject/document',{
            Email:em
          })
        }
       </script>
</head>
<body>
      <header style="background: rgba(255, 255, 255, 0.8);">  
           
                
