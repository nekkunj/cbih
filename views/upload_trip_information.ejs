<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Upload trip information</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<!-- <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script> -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

</head>
<body>
  <br>
    <div class="container">
        <span>
            <h2 style="display:inline">Welcome <%=user.fullname%></h2>
            <a class="mr-0 btn btn-lg btn-warning" style="float:right"  href="/logout">Logout</a>
          </span> 
<hr style="border:1px blue solid">

          <div class="row">
            <span class="col-md-6 mb-1"  id="form2">
              <h2 class="my-4">Flights confirmation</h2>
              <form action="/backend/documents/trip/Flights_confirmation/<%=Email%>" method="post" enctype="multipart/form-data">
                
          
                <div class="custom-file mb-3">
                  
                <input type="file" name="file" id="file" class="custom-file-input referral_letter_id"  accept=".doc,.docx,.pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document">
             
          
                <label for="file" class="custom-file-label" data-browse="Browse" >Choose file</label>
                </div>
                <input type="submit" value="Upload" id="referral_letter_upload" class="btn btn-success btn-block">
                </form>
            </span>
            <span class="col-md-1"></span>
            <span class="col-md-3 col-sm-6" >
                <% if(files && backend_doc){ %>
                  <% files.forEach(function(file) { %>
                    <%backend_doc.forEach(function(uc){%>
                      <%if(uc.filename===file.filename && uc.document_type==='trip' && uc.type_of_file==='Flights_confirmation'){%>
                    <div class="card card-body mb-3">
                      <% if(file.isImage) { %>
                        <img src="backend/image/<%= file.filename %>" alt="">
                        <% } else { %>
                          <a href="backend/files/<%= file.filename %>"><%=uc.originalfilename%></a>
                            <% } %>
                              <form method="POST" action="/files/<%= file._id %>?_method=DELETE">
                                <button class="btn btn-danger btn-block mt-4">Delete</button>
                              </form>
                    </div>
                    <%} })}) %>
                      <% } else { %>
                        <p>No files uploaded</p>
                        <% } %>
            </span>
          </div>
<hr>
<div class="row">
    <span class="col-md-6 mb-1"  id="form2">
      <h2 class="my-4">Hotel confirmation</h2>
      <form action="/backend/documents/trip/Hotel_confirmation/<%=Email%>" method="post" enctype="multipart/form-data">
        
  
        <div class="custom-file mb-3">
          
        <input type="file" name="file" id="file" class="custom-file-input referral_letter_id"  accept=".doc,.docx,.pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document">
     
  
        <label for="file" class="custom-file-label" data-browse="Browse" >Choose file</label>
        </div>
        <input type="submit" value="Upload" id="referral_letter_upload" class="btn btn-success btn-block">
        </form>
    </span>
    <span class="col-md-1"></span>
    <span class="col-md-3 col-sm-6" >
        <% if(files && backend_doc){ %>
          <% files.forEach(function(file) { %>
            <%backend_doc.forEach(function(uc){%>
              <%if(uc.filename===file.filename && uc.document_type==='trip' && uc.type_of_file==='Hotel_confirmation'){%>
            <div class="card card-body mb-3">
              <% if(file.isImage) { %>
                <img src="/backend/image/<%= file.filename %>" alt="">
                <% } else { %>
                  <a href="/backend/files/<%= file.filename %>"><%=uc.originalfilename%></a>
                    <% } %>
                      <form method="POST" action="/files/<%= file._id %>?_method=DELETE">
                        <button class="btn btn-danger btn-block mt-4">Delete</button>
                      </form>
            </div>
            <%} })}) %>
              <% } else { %>
                <p>No files uploaded</p>
                <% } %>
    </span>
  </div>
  <hr>
 <a class="btn btn-danger center " href="/forwardpage/<%=Email%>">Submit</a>
  
    </div>
</body>
</html>
  

    
    

